    </svg>
</div>
<script>
    $(".popup").mouseover(function () {
        $(".exit").fadeIn();
    });
    $(".popup").mouseleave(function () {
        $(".exit").css("display","none");
    });
    $(".exit").click(function () {
        $(".popup").css("display", "none");
         $(".infoo").css("display","block");
    });
    $(".infoo").click(function () {
        $(".infoo").css("display", "none");
        $(".popup").fadeIn();
    });

</script>
