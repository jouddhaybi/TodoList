<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add TODO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group row">
                    <label for="InputTitle" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="InputTitle" placeholder="Title">
                        <small id="TitleHelp" class="TitleError"> Title is required</small>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="InputCategory" class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="InputCategory" placeholder="Category">
                        <small id="CategoryHelp" class="CategoryError"> Category is required</small>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="InputDate" class="col-sm-2 col-form-label">Due Date</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="InputDate">
                    </div>
                </div>


                <div class="form-group row">
                    <label for="InputEstimate" class="col-sm-2 col-form-label">Estimate</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="InputEstimate" placeholder="Estimate">
                        <small id="EstimateHelp" class="EstimateError"> Estimate is required</small>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="InputImportance" class="col-sm-2 col-form-label">Importance</label>
                    <div class="col-sm-10">
                        <select id="InputImportance" onchange="selectimportance(this.value)" class="form-control">
                            <option value="0">Default select</option>
                        </select>
                        <small id="ImportanceHelp" class="ImportanceError"> Importance is required</small>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" onclick="AddTodoData()" id="AddTodo" class="btn btn-primary">ADD</button>
            </div>
        </div>
    </div>
</div>

